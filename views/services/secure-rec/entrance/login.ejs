<% include ../layouts/navigation-bar %>

<main class="container general-container">
    <div class="row h-100">
        <div class="col-12 my-auto">
            <% include ../../../layouts/wait %>
            <% include ../../../layouts/flash-message %>
            <div id="login-secure-rec" class="row">
                <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <h5 class="mb-5 text-center">Sign in to Secure Rec</h5>
                    <form id="sr-login-form">
                        <div class="form-row mb-2">
                            <div class="form-group col-12 mb-4">
                                <label class="service-form-label mb-2">Email address</label>
                                <input id="email-login" class="form-control service-form-input" type="email" name="email" placeholder="Email" autocomplete="none">
                            </div>
                            <div class="form-group col-12 mb-4">
                                <label class="service-form-label mb-2">Password</label>
                                <input id="password-login" class="form-control service-form-input" type="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-row mt-4">
                            <div class="col-6 offset-3">
                                <button id="sr-login-btn" type="button" class="btn btn-primary btn-block">Sign in</button>
                            </div>
                        </div>
                        <div class="form-row mt-5">
                            <div class="col-12">
                                <p class="login-links">Don't have an account yet? <a href="/services/secure-rec/signup">Create an account.</a></p>
                                <p class="login-links">Forgot your password? <a href="/services/secure-rec/password-recovery">Recover it.</a> </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<% include ../../../layouts/footer %>