<div id="message-success" class="alert alert-success alert-dismissible fade show d-none" role="alert">
    <h6 class="alert-heading">Success!</h6>
    <button type="button" class="close" onclick="$('#message-success').hide()" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <p id="message-success-text"></p>
</div>

