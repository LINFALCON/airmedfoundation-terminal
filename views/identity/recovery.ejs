<main class="container general-container">
    <div class="row h-100">
        <div class="col-12 my-auto">
            <% include ../layouts/wait %>
            <% include ../layouts/flash-message %>
            <div id="custom-recovery-key-input" class="custom-input">
                <form id="form-recovery-key">
                    <div id="public-key-text-box" class="input-group margin-custom-radio">
                        <h6>Private Key</h6>
                        <input id="private-key" type="text" name="privateKey" class="search-query form-control" placeholder="Paste your private key here to recovery your public key" />
                    </div>
                    <button id="btn-recovery-key" class="btn btn-primary margin-custom-radio float-right" type="button"><i class="fas fa-redo" aria-hidden="true"></i> Recover</button>
                </form>
            </div>
            <div id="identity-public-key" class="d-none">
                <p><strong><i class="fa fa-key" aria-hidden="true"></i> Public Key <i id="public-btn" class="fas fa-paste js-tooltip js-copy" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" data-copy="" title="Copy to clipboard"></i></strong></p>
                <p><span id="public-key" class="ajax-text-message"></span></p>
            </div>
        </div>
    </div>
</main>